<h1><%= t("form.edit") %> news</h1>

<% form_for(@news) do |f| %>
  <%= f.error_messages %>

<table class="list">
	<tr>
		<th><%= f.label :title %></th>
		<td><%= f.text_field :title %></td>
	</tr>
	<tr>
		<th><%= f.label :body %></th>
		<td><%= f.text_area :body %></td>
	</tr>
	<tr>
		<th></th>
		<td><%= f.submit t("form.update") %></td>
	</tr>
<% end %>
</table>

<%= link_to t("form.show"), @news %> |
<%= link_to t("form.back"), news_path %>
