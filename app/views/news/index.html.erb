<h1><%= t("form.list") %> news</h1>

<table class="list">
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

<% for news in @news %>
  <tr class="<%= cycle('odd','even')%>">
    <td><%=h news.title %></td>
    <td><%=h news.body %></td>
    <td><%= link_to t("form.show"), news %></td>
    <td><%= link_to t("form.edit"), edit_news_path(news) %></td>
    <td><%= link_to t("form.destroy"), news, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t("form.new") + ' news', new_news_path %>
