<% content_for("header") do %>
	<%= GMap.header(:hl => 'nl', :host => request.host) %>
	<%= @map.to_html %>
<% end %>
<%= periodically_call_remote(
	:success => "eval('(' + request + ');');", 
	:frequency => 6,
	:url => {
		:action => :index, 
		:format => :js
	} ) %>
<%= link_to_remote( 'Reload', 
	:success => "eval('(' + request + ');');", 
	:url => {
		:action => :index, 
		:format => :js
	} ) %>

<%= @map.div(:width => 800, :height => 300) %>
